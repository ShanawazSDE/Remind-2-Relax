<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCE5"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:id="@+id/ll_sit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:text="Work Time"
            android:textSize="30sp"
            android:textColor="#696969"
            />
        <EditText
            android:id="@+id/et_work_time"
            android:layout_width="40sp"
            android:layout_height="60sp"
            android:layout_marginStart="5sp"
            android:inputType="number"
            android:textSize="25sp"
            android:paddingBottom="5sp"
            android:textColor="#696969"
            android:gravity="center"
            android:cursorVisible="false" />
        <TextView
            android:id="@+id/tv_sit_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:text="min"
            android:textSize="30sp"
            android:textColor="#696969"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:text="Relax Time"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et_relax_time"
            android:layout_width="40sp"
            android:layout_height="60sp"
            android:layout_marginStart="5sp"
            android:inputType="number"
            android:textSize="25sp"
            android:paddingBottom="5sp"
            android:textColor="#696969"
            android:gravity="center"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/tv_stand_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:text="min"
            android:textSize="30sp"
            android:textColor="#696969"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:track="@drawable/switch_track" />

    </LinearLayout>

</LinearLayout>